<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--Need to use accent-color because of TextInputLayout onFocus-->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Needed to overwrite statusbar-color-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!--Default window background-color-->
        <item name="android:windowBackground">@color/colorPrimaryLight</item>

        <!--We need a dark text-color for contrast to window background-color-->
        <item name="android:textColor">@color/text_color</item>

    <!-- Base splash screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_ihnn_splash_screen</item>
    </style>
</resources>
